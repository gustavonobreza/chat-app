{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "target": "ES2019",
    "module": "nodenext",
    "strict": true,
    "baseUrl": "src",
    "rootDir": "src",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "./index.ts",
    "**/**.ts",
    "**/**.js"
  ],
  "exclude": [
    "node_modules",
    "webpack.config.js",
    "dist/"
  ]
}